    <script>
        function updateClock() {
            const now = new Date();
            document.getElementById("clock").innerText = now.toLocaleTimeString();
            setTimeout(updateClock, 1000);
        }

        function updateBattery() {
            navigator.getBattery().then(battery => {
                function setBatteryLevel() {
                    const level = Math.round(battery.level * 100) + "%";
                    document.getElementById("battery").innerText = `ðŸ”‹ ${level}`;
                }
                setBatteryLevel();
                battery.addEventListener("levelchange", setBatteryLevel);
            });
        }

        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
            const mode = document.body.classList.contains("dark-mode") ? "Dark" : "Light";
            document.querySelector(".toggle-dark").innerText = mode === "Dark" ? "â˜€ Light Mode" : "ðŸŒ™ Dark Mode";
        }

        updateClock();
        updateBattery();
