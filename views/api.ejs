            gap: 15px;
            background: var(--card-color);
            padding: 12px 20px;
            border-radius: 12px;
            box-shadow: 0px 4px 10px var(--shadow);
            width: fit-content;
            margin: 0 auto 30px;
            border: 1px solid var(--border-color);
        }

        /* TOGGLE MODE GELAP */
        .toggle-dark {
            background: var(--button-bg);
            color: #fff;
            border: none;
            padding: 10px 18px;
            border-radius: 10px;
            cursor: pointer;
            font-size: 14px;
            font-weight: bold;
        }

        .toggle-dark:hover {
            background: var(--button-hover);
            transform: scale(1.05);
        }

        /* TABEL */
        .table-container {
            width: 100%;
            max-width: 700px;
            margin: 0 auto;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: var(--card-color);
            box-shadow: 0px 4px 10px var(--shadow);
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 20px;
        }

        th, td {
            padding: 14px;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
        }

        th {
            background: var(--button-bg);
            color: white;
            font-weight: bold;
        }

        tr:hover {
            background: var(--border-color);
        }

        a {
            color: var(--button-bg);
            text-decoration: none;
            font-weight: 500;
            display: inline-block;
            padding: 6px 10px;
            border-radius: 6px;
        }

        a:hover {
            text-decoration: underline;
        }

        footer {
